<Window x:Class="VirtualOfficeClient.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualOfficeClient.View"
        mc:Ignorable="d"
        Title="Virtual Office Login" Height="300" Width="400">
    <Grid>
        <TextBox Name="Input_UserName" HorizontalAlignment="Center" Margin="0,70,0,0" ToolTip="Enter your Username" Text="{Binding Username}" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" Height="25"/>
        <TextBox Name="Input_Password" HorizontalAlignment="Center" Margin="0,110,0,0" ToolTip="Enter your Password" Text="{Binding Password}" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" Height="25"/>
        <Button Command="{Binding LoginCommand}" Content="Login" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Height="25" Width="126"/>
        <Label Content="{Binding Path=StatusLabel, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.769,0.646"/>

    </Grid>
</Window>
