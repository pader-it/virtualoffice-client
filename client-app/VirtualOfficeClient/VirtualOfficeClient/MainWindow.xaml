<Window x:Class="VirtualOfficeClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualOfficeClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="Input_UserName" HorizontalAlignment="Center" Margin="0,70,0,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" Height="25"/>
        <TextBox Name="Input_Password" HorizontalAlignment="Center" Margin="0,110,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top" Width="344" Height="25"/>
        <Button Content="Login" Click="BtnLogin_Click" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Height="25" Width="126"/>
        <Label Content="{Binding Path=StatusLabel, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="228,199,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.769,0.646"/>

    </Grid>
</Window>
